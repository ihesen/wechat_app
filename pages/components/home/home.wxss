/* home.wxss */

.img {
  width: 100%;
}

.serviceContainer {
  width: 100%;
  height: 100%;
}
.home_topbar_delivery{
  width: 100%;
  font-size: 14px;
  margin-left: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.home_topbar{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.home_topbar_option_button{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
}

.home_topbar_icon{
  margin: 8px;
  width: 20px;
  height: 20px;
}

.weui-grids {
  height: 210px;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 20px 10px;
  width: 25%;
  box-sizing: border-box;
}
.weui-sku {
  position: relative;
  float: left;
  padding: 20px 10px;
  width: 50%;
  box-sizing: border-box;
}

.weui-grid__icon {
  width: 32px;
  height: 32px;
  margin: 0 auto;
}
.weui-sku__skuimg {
  width: 120px;
  height: 120px;
  margin: 0 auto;
}

.weui-grid__icon image {
  display: block;
  width: 100%;
  height: 100%;
}
.weui-grid__label {
  display: block;
  text-align: center;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.loading{  
  padding: 10rpx;  
  text-align: center;  
} 
